<%= form_for @contact do |f| %>
	<p>
		<%= f.label :full_name %>
		<%= f.text_field :full_name, class: "form-control", placeholder: "Full Name"%>
	</p>
	<p>
		<%= f.label :phone_number %>
		<%= f.text_field :phone_number, class: "form-control", placeholder: "Phone Number" %> 
	</p>
	<p>
		<%= f.label :email %>
		<%= f.text_field :email, class: "form-control", placeholder: "Email" %>
	</p>
	<p>
		<%= f.label :address %>
		<%= f.text_area :address, class: "form-control", placeholder: "Address" %>
	</p>
	<p>
		<%= f.submit class: "btn btn-success" %>
	</p>
<% end %>
<%= link_to "<<Back", contacts_path, class: "label label-default" %>